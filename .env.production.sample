ENVIRONMENT=production
SERVICE_NAME=arche_api
SERVICE_VERSION=0.0.0
LOG_LEVEL=INFO

# CORS: explicit allowlist only (no "*")
ALLOWED_ORIGINS=https://app.arche.com

# Auth in production:
# Until RS256/JWKS path is implemented, keep AUTH_ENABLED=false to pass current validator.
AUTH_ENABLED=false
# If you must turn it on before RS256 is wired, provide HS256 secret (not recommended):
# AUTH_HS256_SECRET=change-me

# Planned RS256/Clerk (wired later via code changes):
# clerk_issuer=https://<your-subdomain>.clerk.accounts.dev
# clerk_audience=arche_api

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_BACKEND=redis
RATE_LIMIT_BURST=50
RATE_LIMIT_WINDOW_SECONDS=1

# Managed by your secrets manager in real deployments
DATABASE_URL=__managed_by_secret_manager__
REDIS_URL=__managed_by_secret_manager__
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

MARKETSTACK_API_KEY=__managed_by_secret_manager__
EDGAR_BASE_URL=https://data.sec.gov

# (Optional) OTEL
# OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp.your-collector:4318
# OTEL_SERVICE_NAME=${SERVICE_NAME}
