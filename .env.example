# App
ENVIRONMENT=dev
LOG_LEVEL=INFO
SERVICE_VERSION=0.0.0

# DB/cache (match compose service names)
DATABASE_URL=postgresql+asyncpg://stacklion:stacklion@db:5432/stacklion
REDIS_URL=redis://redis:6379/0

# CORS dev default
ALLOWED_ORIGINS=*

# Rate limit toggles
RATE_LIMIT_ENABLED=false
RATE_LIMIT_BACKEND=memory
RATE_LIMIT_BURST=5
RATE_LIMIT_WINDOW_SECONDS=1

# Auth toggles (optional)
AUTH_ENABLED=false

# OTEL (turn on to test; collector is at otel-collector:4317 inside the compose network)
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
