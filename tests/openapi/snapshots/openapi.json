{
  "components": {
    "schemas": {
      "CheckResult": {
        "description": "Result of a single dependency check.\n\nAttributes:\n    name: Logical name of the dependency (e.g., \"db\", \"redis\").\n    status: One of {\"ok\",\"down\"} for the specific check.\n    detail: Optional human-readable detail (e.g., error message).\n    duration_ms: Milliseconds spent on the probe.",
        "properties": {
          "detail": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "title": "Detail"
          },
          "duration_ms": {
            "title": "Duration Ms",
            "type": "number"
          },
          "name": {
            "examples": [
              "db",
              "redis"
            ],
            "title": "Name",
            "type": "string"
          },
          "status": {
            "enum": [
              "ok",
              "down"
            ],
            "title": "Status",
            "type": "string"
          }
        },
        "required": [
          "name",
          "status",
          "duration_ms"
        ],
        "title": "CheckResult",
        "type": "object"
      },
      "ErrorEnvelope": {
        "additionalProperties": false,
        "description": "Canonical error envelope wrapping ErrorObject.",
        "examples": [
          {
            "error": {
              "code": "VALIDATION_ERROR",
              "details": {
                "field": "price",
                "min_value": 0
              },
              "http_status": 400,
              "message": "price must be >= 0",
              "trace_id": "c5a6a0c4-0c8d-4f0f-b6e6-8f1f0c2b7e7a"
            }
          }
        ],
        "properties": {
          "error": {
            "$ref": "#/components/schemas/ErrorObject",
            "description": "Structured error details."
          }
        },
        "required": [
          "error"
        ],
        "title": "ErrorEnvelope",
        "type": "object"
      },
      "HealthState": {
        "description": "Overall health classification.",
        "enum": [
          "ok",
          "degraded",
          "down"
        ],
        "title": "HealthState",
        "type": "string"
      },
      "LivenessResponse": {
        "description": "Liveness response indicating the process is running.",
        "properties": {
          "status": {
            "const": "ok",
            "default": "ok",
            "title": "Status",
            "type": "string"
          }
        },
        "title": "LivenessResponse",
        "type": "object"
      },
      "PaginatedEnvelope": {
        "additionalProperties": false,
        "description": "Canonical paginated envelope for list responses.",
        "examples": [
          {
            "items": [
              {
                "company_id": "a3d8b3c8-9d9e-4a64-9b38-7e2b8cfd8c34",
                "currency": "USD",
                "revenue": "61800000000",
                "statement_date": "2024-12-31",
                "ticker": "MSFT"
              }
            ],
            "page": 1,
            "page_size": 50,
            "total": 1234
          }
        ],
        "properties": {
          "items": {
            "description": "Page contents (adapter DTOs).",
            "items": {},
            "title": "Items",
            "type": "array"
          },
          "page": {
            "description": "1-indexed page number.",
            "minimum": 1,
            "title": "Page",
            "type": "integer"
          },
          "page_size": {
            "description": "Items per page (bounded by API policy).",
            "maximum": 200,
            "minimum": 1,
            "title": "Page Size",
            "type": "integer"
          },
          "total": {
            "description": "Total number of records matching the current filter.",
            "minimum": 0,
            "title": "Total",
            "type": "integer"
          }
        },
        "required": [
          "page",
          "page_size",
          "total",
          "items"
        ],
        "title": "PaginatedEnvelope",
        "type": "object"
      },
      "ReadinessResponse": {
        "description": "Aggregated readiness response following a problem-details-like shape.\n\nAttributes:\n    status: Overall service status classification.\n    checks: Individual dependency check results.",
        "properties": {
          "checks": {
            "items": {
              "$ref": "#/components/schemas/CheckResult"
            },
            "title": "Checks",
            "type": "array"
          },
          "status": {
            "$ref": "#/components/schemas/HealthState"
          }
        },
        "required": [
          "status"
        ],
        "title": "ReadinessResponse",
        "type": "object"
      },
      "SuccessEnvelope": {
        "additionalProperties": false,
        "description": "Canonical success envelope for single-resource responses.",
        "examples": [
          {
            "data": {
              "id": "a3d8b3c8-9d9e-4a64-9b38-7e2b8cfd8c34",
              "ticker": "MSFT"
            }
          }
        ],
        "properties": {
          "data": {
            "description": "Adapter DTO or primitive value returned by the endpoint.",
            "title": "Data"
          }
        },
        "required": [
          "data"
        ],
        "title": "SuccessEnvelope",
        "type": "object"
      }
    }
  },
  "info": {
    "description": "Bloomberg-grade data layer for modern finance teams.",
    "title": "Stacklion API",
    "version": "0.1.0"
  },
  "openapi": "3.1.0",
  "paths": {
    "/health/ready": {
      "get": {
        "description": "Aggregate dependency checks and return overall readiness.\nThe response status code is 200 when all checks are \"ok\", otherwise 503.\nIndividual check errors are captured in their `detail` field.\n\nArgs:\n    response: FastAPI response object used to mutate the status code.\n    probe: Injected health probe implementing dependency checks.\n\nReturns:\n    A `ReadinessResponse` summarizing dependency health.",
        "operationId": "health_readiness",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReadinessResponse"
                }
              }
            },
            "description": "Successful Response"
          },
          "503": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReadinessResponse"
                }
              }
            },
            "description": "Service degraded or down"
          }
        },
        "summary": "Readiness",
        "tags": [
          "Health"
        ]
      }
    },
    "/health/z": {
      "get": {
        "description": "Return a fast liveness signal.\n\nThis endpoint must avoid any external I/O to ensure it can respond even when\ndependencies are unavailable.",
        "operationId": "health_liveness",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LivenessResponse"
                }
              }
            },
            "description": "Successful Response"
          }
        },
        "summary": "Liveness",
        "tags": [
          "Health"
        ]
      }
    }
  }
}
