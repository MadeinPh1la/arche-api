{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "title": "Stacklion API — Overview",
  "uid": "stacklion-api-overview",
  "version": 1,
  "schemaVersion": 39,
  "style": "dark",
  "editable": false,
  "tags": ["stacklion", "observability"],
  "timezone": "browser",
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": { "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"] },
  "refresh": "10s",
  "panels": [
    {
      "type": "row",
      "title": "HTTP — Latency & Traffic",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 1,
      "type": "timeseries",
      "title": "HTTP P95 Latency (s)",
      "description": "histogram_quantile over http_server_request_duration_seconds_bucket",
      "gridPos": { "x": 0, "y": 1, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": { "unit": "s", "decimals": 3 },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le, handler) (rate(http_server_request_duration_seconds_bucket[5m])))",
          "legendFormat": "{{handler}}",
          "interval": "",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "HTTP P99 Latency (s)",
      "description": "histogram_quantile over http_server_request_duration_seconds_bucket",
      "gridPos": { "x": 12, "y": 1, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": { "unit": "s", "decimals": 3 },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.99, sum by (le, handler) (rate(http_server_request_duration_seconds_bucket[5m])))",
          "legendFormat": "{{handler}}",
          "interval": "",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Request Rate (req/s)",
      "description": "Sum over all handlers; split by status class",
      "gridPos": { "x": 0, "y": 9, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": { "unit": "req/s", "decimals": 2 },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (status) (rate(http_server_request_duration_seconds_count[5m]))",
          "legendFormat": "status={{status}}",
          "interval": "",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    },
    {
      "id": 4,
      "type": "stat",
      "title": "HTTP Error Rate (%)",
      "description": "5xx / all in last 5m",
      "gridPos": { "x": 12, "y": 9, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": { "unit": "percent", "decimals": 2 },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * (sum(rate(http_server_request_duration_seconds_count{status=~\"5..\"}[5m])) / sum(rate(http_server_request_duration_seconds_count[5m])))",
          "legendFormat": "5xx %",
          "interval": "",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    },
    {
      "type": "row",
      "title": "Readiness Latency (Probes)",
      "gridPos": { "x": 0, "y": 17, "w": 24, "h": 1 },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "DB Readiness P95 (s)",
      "description": "histogram_quantile over readyz_db_latency_seconds_bucket",
      "gridPos": { "x": 0, "y": 18, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": { "unit": "s", "decimals": 3 },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le) (rate(readyz_db_latency_seconds_bucket[5m])))",
          "legendFormat": "db",
          "interval": "",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Redis Readiness P95 (s)",
      "description": "histogram_quantile over readyz_redis_latency_seconds_bucket",
      "gridPos": { "x": 12, "y": 18, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": { "unit": "s", "decimals": 3 },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le) (rate(readyz_redis_latency_seconds_bucket[5m])))",
          "legendFormat": "redis",
          "interval": "",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "handler",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "refresh": 2,
        "hide": 2,
        "query": "label_values(http_server_request_duration_seconds_bucket, handler)",
        "includeAll": true,
        "multi": true,
        "current": { "selected": false, "text": "All", "value": ["$__all"] }
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "type": "dashboard",
        "name": "Annotations & Alerts",
        "hidden": true
      }
    ]
  },
  "links": []
}
